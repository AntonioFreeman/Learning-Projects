<Window x:Class="Examenator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examenator"
        mc:Ignorable="d"
        Title="Examenator" Height="450" Width="800" FontSize="14" ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.503,0.352">
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="26*" />
            <RowDefinition Height="271*" />
            <RowDefinition Height="86*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138*" />
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="108*" />
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Доступные экзамены:" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" Height="18" Margin="218,10,184,10" Width="176"/>
        <DataGrid IsReadOnly="True" SelectedIndex ="{Binding SelectedExam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Margin="10,0,10,10" Grid.RowSpan="3" Grid.ColumnSpan="2" Grid.Row="1" ItemsSource="{Binding ExamsTable}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Subject}" Header="Название" Width="270"/>
                <DataGridTextColumn Binding="{Binding AmountTasks}" Header="Количество вопросов"/>
                <DataGridTextColumn Binding="{Binding TimeExam}" Header="Время экзамена"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button ToolTip="Перед началом экзамена введите необходимое количество вопросов и время экзамена" Command="{Binding Path=StartExamCommand}" Content="Начать экзамен" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="34,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="157" />
        <Button Command="{Binding Path=AddExamCommand}" Content="Создать экзамен" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="34,54,0,0" Grid.Row="2" VerticalAlignment="Top" Width="157" />
        <Button Command="{Binding Path=EditExamCommand}" Content="Изменить экзамен" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="34,97,0,0" Grid.Row="2" VerticalAlignment="Top" Width="157" />
        <Button Command="{Binding Path=RemoveExamCommand}" CommandParameter="{Binding Path=SelectedExam}" Content="Удалить экзамен" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="34,138,0,0" Grid.Row="2" VerticalAlignment="Top" Width="157" />
    </Grid>
</Window>
