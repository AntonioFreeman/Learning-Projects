<Window x:Class="Examenator.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examenator.Views"
        mc:Ignorable="d"
        Title="Проверка прав доступа" Height="150" Width="350" ResizeMode="NoResize" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <PasswordBox Name="pswrd_1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="24" Margin="151,24,0,0" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Margin="20,24,0,0" Width="130" Height="22"/>
        <Button Content="ОК" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="80" Click="Verification" Height="25" />
    </Grid>
</Window>
